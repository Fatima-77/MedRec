<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Display / Hero Text -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar"/>
    <style name="TextAppearance.MediaNest.Display" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/cursive</item>
        <item name="android:textSize">34sp</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <!-- Headline / Section Titles -->
    <style name="TextAppearance.MediaNest.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <!-- Body Text -->
    <style name="TextAppearance.MediaNest.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <!-- Caption / Small Text -->
    <style name="TextAppearance.MediaNest.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

</resources>