<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/editUsername"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Username"
            android:inputType="text"
            android:background="@drawable/edit_text_background"
            android:padding="10dp"
            android:imeOptions="actionNext"
            android:nextFocusDown="@+id/editEmail"
            android:layout_marginBottom="14dp"/>

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_background"
            android:padding="10dp"
            android:imeOptions="actionNext"
            android:nextFocusDown="@+id/editPassword"
            android:layout_marginBottom="14dp"/>

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_background"
            android:padding="10dp"
            android:imeOptions="actionNext"
            android:nextFocusDown="@+id/editConfirmPassword"
            android:layout_marginBottom="14dp"
            android:drawableEnd="@drawable/ic_visibility"/>

        <EditText
            android:id="@+id/editConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_background"
            android:padding="10dp"
            android:imeOptions="actionDone"
            android:layout_marginBottom="18dp"
            android:drawableEnd="@drawable/ic_visibility"/>

        <!-- Age Group -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age Group (optional):"
            android:layout_marginTop="8dp"/>
        <Spinner
            android:id="@+id/spinnerAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <!-- Ethnicity -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ethnicity (optional):"
            android:layout_marginTop="8dp"/>
        <Spinner
            android:id="@+id/spinnerEthnicity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <!-- Location -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location (optional):"
            android:layout_marginTop="8dp"/>
        <Spinner
            android:id="@+id/spinnerLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <CheckBox
            android:id="@+id/checkPersonalization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allow my info to personalize recommendations"
            android:checked="true"
            android:layout_marginBottom="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Sign Up"
            android:backgroundTint="@color/colorDark"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Log in"
            android:textStyle="italic"
            android:padding="8dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>





