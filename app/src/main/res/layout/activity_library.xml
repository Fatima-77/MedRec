<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    android:fitsSystemWindows="true">

    <!-- Banner is included by BaseActivity -->

    <!-- Filter bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Library"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/gradient_dark"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iconFilter"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_filter_list"
            android:contentDescription="Filter"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Filter panel -->
    <LinearLayout
        android:id="@+id/filterPanel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/edit_text_background"
        android:padding="16dp"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/editSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Search by title"
            android:inputType="text"
            android:background="@drawable/edit_text_background"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:layout_marginBottom="8dp"
            android:imeOptions="actionDone"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:fillViewport="true"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:id="@+id/genreCheckboxContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>

        <Spinner
            android:id="@+id/spinnerSort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnApplyFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:backgroundTint="@color/gradient_dark"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- User Library RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerLibrary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"/>

    <!-- Recommendations placeholder -->
    <TextView
        android:id="@+id/recommendationsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Based on your Library"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/gradient_dark"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRecommendations"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="16dp"/>
</LinearLayout>


